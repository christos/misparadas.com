<% div_for location do %>
  <h2>
    <span class='code'><%= location.emt_code %></span> <%= location.name %>
    <span class='distance'><%= distance_in_meters(location)  %></span>
  </h2>
    
  <ul>
    <% location.routes.each do |route|  %>
      <% content_tag_for :li, route, :class => favourite_class_if(choice.favourite_route == route) do %>
       
        <% unless choice.favourite_route == route %>
          <% form_for choice, :html => {:method => :put} do |f| %>
            <%= f.hidden_field :favourite_route_id, :value => route.id %>
            <button type='submit'>*</button>
          <% end %>
        <% end %>
       
        <%= route.line.name %> dirreción <%= route.direction %> expected <%= route.expected_at(location) %>
        
        <% end %>
    <% end %>
  </ul>
  
  <% form_for choice, :html => {:method => :delete} do |f| %>
    <button type='submit' class='delete' onclick='return confirm("¿Estás seguro?")'>Quitar de mis paradas</button>
  <% end %>

<% end %>
